# Leaseo VPS Configuration
# Copy this file to .env and update the values

# ==================== DATABASE ====================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/leaseo

# ==================== SERVER ====================
NODE_ENV=production
PORT=5000
BASE_URL=https://yourdomain.com

# ==================== SECURITY ====================
# Session secret - generate with: openssl rand -hex 32
SESSION_SECRET=your-strong-session-secret-here

# JWT secret for authentication tokens
JWT_SECRET=your-jwt-secret-here

# ==================== EMAIL (SMTP) ====================
# Required for OTP verification and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@leaseo.in
SMTP_FROM_NAME=Leaseo

# ==================== SMS (Optional) ====================
# For SMS OTP verification (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==================== FILE UPLOADS ====================
# Directory for uploaded files (relative to project root)
UPLOAD_DIR=uploads

# ==================== PAYMENT GATEWAY ====================
# Instamojo credentials (get from Instamojo dashboard)
INSTAMOJO_API_KEY=your-instamojo-api-key
INSTAMOJO_AUTH_TOKEN=your-instamojo-auth-token
INSTAMOJO_SANDBOX=false
